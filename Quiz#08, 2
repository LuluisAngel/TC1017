#include <iostream>
// Luis Angel Aguilar Carrillo A01225421
using namespace std;

void triangulo(int x){
	cout << endl;
	for (int i=1; i<=x; i++){
		for (int j=1; j<=i; j++){
			cout << "T";
		}
		cout << endl;
	}

		for (int k=x-1; k>=0; k--){
			for (int b=1; b<=k; b++){
				cout << "T";
			}
			cout << endl;
		}

}

int main(){

	int x;
	cout << "Introduce el tamaÃ±o del triangulo" << endl;
	cin >> x;
	
	triangulo(x);
}
