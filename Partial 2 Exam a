#include <iostream>

using namespace std;

//Luis Angel Aguilar Carrillo A01225421

void triangle(int x){
	
	for (int i=1; i<=x; i++){
		for (int j=1; j<=i; j++){
		cout << "T";
		}
			cout << endl;
	}
	
	
	for (int k=x; k>0; k--){
		for (int a=1; a<=k; a++){
		cout << "T";
		}
			cout << endl;
	}
}

int main(){
	int x;

	cout << "Ingresa el tamaÃ±o del triangulo" << endl;
	cin >> x;	
	triangle(x);
}
